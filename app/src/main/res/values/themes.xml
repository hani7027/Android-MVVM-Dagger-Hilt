<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClaimBuildScatching" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mcgpalette0_500</item>
        <item name="colorPrimaryVariant">@color/mcgpalette0_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mcgpalette0_A200</item>
        <item name="colorSecondaryVariant">@color/mcgpalette0_A700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title.title1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>'
        <item name="android:textColor">@color/mcgpalette0_500</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="title.title2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>'
        <item name="android:textColor">@color/mcgpalette0_500</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="title.title3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>'
        <item name="android:textColor">@color/mcgpalette0_500</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>



    <style name="button">
        <item name="android:textAlignment">center</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/_50sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
    </style>

    <style name="button.submit">
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:background">@drawable/double_shade_background</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="form">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/mcgpalette0_700</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="form.text">
        <item name="android:inputType">text|textCapSentences</item>
    </style>

    <style name="form.password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="form.number">
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="form.disable">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:editable">false</item>
    </style>


    <style name="form.multiline">
        <item name="android:minLines">4</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>


</resources>